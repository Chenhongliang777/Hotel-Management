.search-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 30rpx;
}

.search-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255,255,255,0.2);
}

.form-item .label {
  font-size: 28rpx;
}

.form-item .picker {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

.btn-search {
  margin-top: 30rpx;
  background: #fff;
  color: #667eea;
  text-align: center;
}

.section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.room-card {
  padding: 0;
  overflow: hidden;
}

.room-image {
  width: 100%;
  height: 300rpx;
}

.room-info {
  padding: 20rpx;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 10rpx;
}

.room-desc {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 15rpx;
}

.room-price .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #f56c6c;
}

.room-price .unit {
  font-size: 24rpx;
  color: #909399;
}
