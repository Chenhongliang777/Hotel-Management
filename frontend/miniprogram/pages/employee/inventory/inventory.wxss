.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  align-items: flex-end;
}

.stock-actions {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.header-actions .action-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: normal;
  border: none;
}

.stock-in-btn {
  background: #48bb78;
  color: #fff;
}

.stock-out-btn {
  background: #ed8936;
  color: #fff;
}

.add-item-btn {
  background: #667eea;
  color: #fff;
}

.header-actions .action-btn::after {
  border: none;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  display: flex;
  padding: 20rpx;
  background: #fff;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.search-wrapper {
  flex: 1;
}

.search-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.filter-wrapper {
  width: 200rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 表格样式 */
.table-container {
  background: #fff;
  margin: 0 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.table-header {
  display: flex;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
}

.table-header .table-cell {
  padding: 20rpx 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  border-right: 1rpx solid #e9ecef;
}

.table-header .table-cell:last-child {
  border-right: none;
}

.table-body {
  min-height: 200rpx;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e9ecef;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row .table-cell {
  padding: 25rpx 15rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #e9ecef;
  word-break: break-all;
}

.table-row .table-cell:last-child {
  border-right: none;
}

.actions-cell {
  gap: 20rpx;
}

.action-link {
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  cursor: pointer;
}

.edit-link {
  color: #667eea;
}

.delete-link {
  color: #f56565;
}

.empty-row {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.stock-modal {
  max-width: 500rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  cursor: pointer;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.required {
  color: #f56565;
  margin-left: 5rpx;
}

.form-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.remark-input {
  border: 2rpx solid #667eea;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-picker .placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 数量输入器 */
.quantity-input-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f5f7fa;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
  padding: 0 !important;
}

.quantity-btn::after {
  border: none;
}

.minus-btn {
  color: #666;
}

.plus-btn {
  color: #667eea;
}

.quantity-input {
  flex: 1;
  height: 60rpx;
  text-align: center;
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.price-input-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.price-input {
  flex: 1;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  padding: 0 !important;
}

.cancel-btn {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.confirm-btn {
  background: #667eea;
  color: #fff;
}

.modal-btn::after {
  border: none;
}
