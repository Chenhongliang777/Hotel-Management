.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.required {
  color: #f56565;
  margin-left: 5rpx;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-picker .placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 订单/物品信息 */
.order-info,
.item-info {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 15rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.info-value.price {
  color: #f56565;
}

/* 数量输入 */
.quantity-input-wrapper {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.quantity-btn {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #f5f7fa;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #333;
  padding: 0 !important;
}

.quantity-btn::after {
  border: none;
}

.minus-btn {
  color: #666;
}

.plus-btn {
  color: #667eea;
}

.quantity-input {
  width: 120rpx;
  min-width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #fff;
  font-size: 32rpx;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

/* 小计 */
.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #667eea15;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.total-row .form-label {
  margin-bottom: 0;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

/* 提交按钮 */
.submit-section {
  padding: 30rpx 20rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
}

/* 消费记录 */
.records-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: #f8f9fa;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.toggle-icon {
  font-size: 20rpx;
  color: #999;
}

.records-list {
  padding: 0 30rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.record-detail {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.record-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #f56565;
}
