.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-text {
  padding: 10rpx 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  color: #303133;
  font-size: 26rpx;
  min-width: 120rpx;
  text-align: center;
}

.filter-separator {
  margin: 0 10rpx;
  color: #909399;
  font-size: 24rpx;
}

.preference-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.preference-label {
  color: #909399;
  margin-right: 20rpx;
}

.preference-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  color: #303133;
}

.preference-text {
  font-size: 26rpx;
}

.preference-arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #909399;
}

.room-card {
  padding: 0;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.room-image {
  width: 100%;
  height: 280rpx;
}

.room-info {
  padding: 20rpx;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 15rpx;
}

.room-tags {
  margin-bottom: 15rpx;
}

.room-tags .tag {
  display: inline-block;
  font-size: 22rpx;
  color: #909399;
  background: #f5f7fa;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.room-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price .amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #f56c6c;
}

.price .unit {
  font-size: 24rpx;
  color: #909399;
}

.btn-book {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  font-size: 24rpx;
  text-align: center;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #909399;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  color: #909399;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #606266;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #909399;
}

.empty-date {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 40rpx;
}

.empty-date-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.empty-date-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-date-text {
  font-size: 32rpx;
  color: #606266;
  margin-bottom: 40rpx;
}

.date-picker-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  max-width: 600rpx;
}

.date-picker-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.date-picker-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

.date-picker-value {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}
