<view class="container">
  <view class="logo-wrap">
    <image class="logo" src="/images/logo.png" mode="aspectFit" binderror="onLogoError" wx:if="{{showLogo}}"></image>
    <text class="app-name">悦居民宿</text>
  </view>
  
  <view class="form-card card">
    <view class="form-item">
      <input class="input" placeholder="请输入用户名" value="{{form.username}}" bindinput="onInput" data-field="username" />
    </view>
    <view class="form-item">
      <input class="input" placeholder="请输入密码（至少6位）" password value="{{form.password}}" bindinput="onInput" data-field="password" />
    </view>
    <view class="form-item">
      <input class="input" placeholder="请再次输入密码" password value="{{form.confirmPassword}}" bindinput="onInput" data-field="confirmPassword" />
    </view>
    <view class="form-item">
      <input class="input" placeholder="请输入手机号" type="number" value="{{form.phone}}" bindinput="onInput" data-field="phone" />
    </view>
    <view class="form-item">
      <input class="input" placeholder="昵称（选填）" value="{{form.nickname}}" bindinput="onInput" data-field="nickname" />
    </view>
    <view class="form-item">
      <input class="input" placeholder="邮箱（选填）" value="{{form.email}}" bindinput="onInput" data-field="email" />
    </view>
    <button class="btn-register btn-primary" bindtap="register" loading="{{loading}}">注册</button>
    <view class="login-link" bindtap="goLogin">已有账号？立即登录</view>
  </view>
</view>

