<view class="container" wx:if="{{roomType}}">
  <swiper class="image-swiper" indicator-dots="{{roomType.images && roomType.images.length > 1}}" autoplay="{{false}}" circular="{{roomType.images && roomType.images.length > 1}}">
    <swiper-item wx:for="{{roomType.images || ['https://dummyimage.com/400x300/667eea/ffffff.png&text=Room']}}" wx:key="index">
      <image src="{{item}}" mode="aspectFill" class="room-image" lazy-load="{{true}}" binderror="onImageError" data-index="{{index}}"></image>
    </swiper-item>
  </swiper>
  
  <view class="info-card card">
    <view class="room-name">{{roomType.name}}</view>
    <view class="room-price">
      <text class="price">¥{{roomType.basePrice}}</text>
      <text class="unit">/晚</text>
    </view>
    <view class="room-tags">
      <text class="tag">{{roomType.bedType}}</text>
      <text class="tag">{{roomType.area}}㎡</text>
      <text class="tag">最多{{roomType.maxGuests}}人</text>
      <text class="tag">{{roomType.bedCount}}张床</text>
    </view>
  </view>
  
  <view class="detail-card card">
    <view class="section-title">房间描述</view>
    <view class="description">{{roomType.description || '暂无描述'}}</view>
  </view>
  
  <view class="detail-card card">
    <view class="section-title">设施服务</view>
    <view class="facilities">
      <text class="facility" wx:for="{{facilities}}" wx:key="index">{{item}}</text>
    </view>
  </view>
  
  <view class="bottom-bar">
    <view class="price-info">
      <text class="label">{{nights}}晚总价</text>
      <text class="total-price">¥{{totalPrice}}</text>
    </view>
    <button class="btn-book btn-primary" bindtap="goBooking">立即预订</button>
  </view>
</view>
