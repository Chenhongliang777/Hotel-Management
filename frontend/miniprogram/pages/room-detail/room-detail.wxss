page {
  height: 100%;
  background-color: #f5f7fa;
  overflow-y: auto;
}

.container {
  padding: 0;
  padding-bottom: 140rpx;
  box-sizing: border-box;
  min-height: calc(100vh - 140rpx);
}

.image-swiper {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.room-image {
  width: 100%;
  height: 100%;
  display: block;
}

.info-card {
  margin: 20rpx 20rpx 0;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 15rpx;
}

.room-price .price {
  font-size: 42rpx;
  font-weight: bold;
  color: #f56c6c;
}

.room-price .unit {
  font-size: 26rpx;
  color: #909399;
}

.room-tags {
  margin-top: 20rpx;
}

.room-tags .tag {
  display: inline-block;
  font-size: 24rpx;
  color: #606266;
  background: #f5f7fa;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.detail-card {
  margin: 20rpx;
  padding-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
  padding-left: 15rpx;
  border-left: 6rpx solid #667eea;
}

.description {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.8;
}

.facilities {
  display: flex;
  flex-wrap: wrap;
}

.facility {
  width: 25%;
  text-align: center;
  font-size: 26rpx;
  color: #606266;
  padding: 15rpx 0;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  z-index: 100;
}

.price-info .label {
  font-size: 24rpx;
  color: #909399;
}

.price-info .total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #f56c6c;
}

.btn-book {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
