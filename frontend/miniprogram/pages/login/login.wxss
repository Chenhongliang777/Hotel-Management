.logo-wrap {
  text-align: center;
  padding: 80rpx 0 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
}

.app-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-top: 20rpx;
}

.form-card {
  padding: 40rpx;
}

.login-type-tabs {
  display: flex;
  margin-bottom: 40rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 4rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #667eea;
  color: #fff;
  font-weight: bold;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .input {
  width: 100%;
  height: 90rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.btn-login {
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  text-align: center;
  padding: 0 !important;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.btn-login::after {
  border: none;
}

.register-link {
  text-align: center;
  margin-top: 30rpx;
  color: #667eea;
  font-size: 28rpx;
}
