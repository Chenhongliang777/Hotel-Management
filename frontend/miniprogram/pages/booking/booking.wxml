<view class="container">
  <view class="room-info card">
    <view class="room-name">{{roomType.name}}</view>
    <view class="date-info">{{checkInDate}} 至 {{checkOutDate}} · {{nights}}晚</view>
  </view>
  
  <view class="form-card card">
    <view class="section-title">入住信息</view>
    <view class="form-item">
      <text class="label">入住人姓名</text>
      <input class="input" placeholder="请输入姓名" value="{{form.guestName}}" bindinput="onInput" data-field="guestName" />
    </view>
    <view class="form-item">
      <text class="label">手机号码</text>
      <input class="input" placeholder="请输入手机号" type="number" value="{{form.guestPhone}}" bindinput="onInput" data-field="guestPhone" />
    </view>
    <view class="form-item">
      <text class="label">身份证号</text>
      <input class="input" placeholder="请输入身份证号" value="{{form.guestIdCard}}" bindinput="onInput" data-field="guestIdCard" />
    </view>
    <view class="form-item">
      <text class="label">入住人数</text>
      <picker mode="selector" range="{{guestOptions}}" value="{{guestIndex}}" bindchange="onGuestChange">
        <view class="picker-value">{{guestOptions[guestIndex]}}人</view>
      </picker>
    </view>
    <view class="form-item">
      <text class="label">备注</text>
      <input class="input" placeholder="选填" value="{{form.remark}}" bindinput="onInput" data-field="remark" />
    </view>
  </view>
  
  <view class="price-card card">
    <view class="section-title">费用明细</view>
    <view class="price-row">
      <text>房费 ¥{{roomType.basePrice}} × {{nights}}晚</text>
      <text>¥{{totalPrice}}</text>
    </view>
    <view class="price-row">
      <text>保证金({{depositRate * 100}}%)</text>
      <text>¥{{deposit}}</text>
    </view>
    <view class="price-row total">
      <text>应付总计</text>
      <text class="total-price">¥{{grandTotal}}</text>
    </view>
    <view class="price-row deposit">
      <text>本次需付保证金</text>
      <text class="deposit-price">¥{{deposit}}</text>
    </view>
  </view>
  
  <view class="bottom-bar">
    <view class="price-info">
      <text class="label">需付保证金</text>
      <text class="amount">¥{{deposit}}</text>
    </view>
    <button class="btn-submit btn-primary" bindtap="submitOrder" loading="{{submitting}}">提交订单</button>
  </view>
</view>
