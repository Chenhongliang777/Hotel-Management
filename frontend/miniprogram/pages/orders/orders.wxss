.order-card {
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ebeef5;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #909399;
}

.status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.status.pending { background: #fdf6ec; color: #e6a23c; }
.status.confirmed { background: #ecf5ff; color: #409eff; }
.status.checked_in { background: #f0f9eb; color: #67c23a; }
.status.checked_out { background: #f4f4f5; color: #909399; }
.status.cancelled { background: #fef0f0; color: #f56c6c; }

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.info-row .label {
  color: #909399;
}

.info-row .price {
  font-weight: bold;
  color: #f56c6c;
}

.order-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #ebeef5;
  text-align: right;
}

.btn-cancel {
  font-size: 24rpx;
  color: #909399;
  background: #f5f7fa;
  border: none;
  text-align: center;
}

.empty, .login-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #909399;
}

.btn-login {
  margin-top: 30rpx;
  width: 200rpx;
  text-align: center;
}
